<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/Animation_Splash</item>
    </style>

    <style name="Animation_Splash">
        <item name="android:windowEnterAnimation">@anim/splash_alpha_from_in</item>
        <item name="android:windowExitAnimation">@anim/splash_alpha_to_out</item>
    </style>

</resources>
